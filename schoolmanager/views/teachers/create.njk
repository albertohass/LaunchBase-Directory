{% extends "layout.njk" %}

{% block content %}
<form class="card" action = "/teachers" method = "POST">
    <section class="avatar" style = "background: url(https://source.unsplash.com/collection/8360382/500x500) no-repeat center center / cover"></section>
    
    <section class="details">
        <h3>Cadastro de Professor</h3>
        
        <div class="info">
            <div>Nome completo</div>
            <input type="text" name="name" placeholder="Nome">
        </div>

        <div class="info">
            <div>Data de Nascimento</div>
            <input type="date" name="birth">
        </div>

        <div class="info">
            <div>Grau de escolaridade</div>
            <select name="scholarity">
                <option value="Ensino Medio Completo">Ensino Médio</option>
                <option value="Ensino Superior Completo">Ensino Superior</option>
                <option value="Mestrado">Mestrado</option>
                <option value="Doutorado">Doutorado</option>
            </select>
        </div>

        <div class="info">
            <div>Tipo de aula</div>
            <span><input type="radio" name="type" value = "Á distancia"> Á distancia</span>
            <span><input type="radio" name="type" value = "Presencial">Presencial</span>
        </div>

        <div class="info">
            <div>Acompanhamento</div>
            <input type="text" name="atuacao" placeholder="Tipo de Aula">
        </div>

        <button type="submit">Enviar</button>

    </section>
</form>
{% endblock %}