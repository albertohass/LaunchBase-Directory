{% extends "layout.njk" %}

{% block content %}
<div class="card">
    <section class="avatar" style = "background: url(https://source.unsplash.com/collection/8360382/500x500) no-repeat center center / cover"></section>
    
    <section class="details">
        <h3>Detalhes</h3>
        
        <div class="info">
            <div>Nome completo</div>
            <div>{{teacher.name}}</div>
        </div>

        <div class="info">
            <div>Idade</div>
            <div>{{teacher.age}}</div>
        </div>

        <div class="info">
            <div>Grau de escolaridade</div>
            <div>{{teacher.scholarity}}</div>
        </div>

        <div class="info">
            <div>Tipo de aula</div>
            <div>{{teacher.type}}</div>
        </div>

        <div class="info">
            <div>Acompanhamento</div>
                {% for service in teacher.services %}
                    <span>{{service}}</span>
                {% endfor %}
            
        </div>

        <div class="info">
            <div>Desde </div>
            <div>{{teacher.created_at}}</div>
        </div>

    </section>
</div>
{% endblock %}