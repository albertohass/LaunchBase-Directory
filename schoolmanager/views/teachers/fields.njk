<div class="info">
            <div>Nome completo</div>
            <input type="text" name="name" placeholder="Nome" value = "{{teacher.name}}">
        </div>

        <div class="info">
            <div>Data de Nascimento</div>
            <input type="date" name="birth" value = "{{teacher.birth}}">
        </div>

        <div class="info">
            <div>Grau de escolaridade</div>
            <select name="scholarity">
                {% if teacher.scholarity != "" %}
                    <option value="Medio">{{teacher.scholarity}}</option>
                {% endif %}
                <option value="Medio">Ensino Médio</option>
                <option value="Superior">Ensino Superior</option>
                <option value="Mestrado">Mestrado</option>
                <option value="Doutorado">Doutorado</option>
            </select>
        </div>

        <div class="info">
            <div>Tipo de aula</div>
                
            <span>
                <input type="radio" name="type" value = "Á distancia" 
                    {% if teacher.type == 'Á distancia' %}
                        checked 
                    {% endif %}> Á distancia
            </span>
            <span>
                <input type="radio" name="type" value = "Presencial" {% if teacher.type == 'Presencial' %}
                    checked
                {% endif %}
                >Presencial
            </span>
        </div>

        <div class="info">
            <div>Acompanhamento</div>
            <input type="text" name="services" placeholder="Tipo de Aula"  value = "{{teacher.services}}">
        </div>

        <button type="submit">Salvar</button>